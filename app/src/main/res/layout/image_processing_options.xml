<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_processing_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background"
    android:scrollbars="none"
    app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/option_face_detection"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/image_processing_option_background"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/option_face_detection_icon"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:src="@drawable/ic_face_detection" />

            <TextView
                android:id="@+id/option_face_detection_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/face_detection"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_age_estimation"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/image_processing_option_background"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/option_age_estimation_icon"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:src="@drawable/ic_age_estimation" />

            <TextView
                android:id="@+id/option_age_estimation_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/age_estimation"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_gender"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/image_processing_option_background"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/option_gender_icon"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:src="@drawable/ic_gender" />

            <TextView
                android:id="@+id/option_gender_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_pixelization"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/image_processing_option_background"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/option_pixelization_icon"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:src="@drawable/ic_pixelization" />

            <TextView
                android:id="@+id/option_pixelization_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pixelization"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_grayscale"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/image_processing_option_background"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/option_grayscale_icon"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:src="@drawable/ic_grayscale" />

            <TextView
                android:id="@+id/option_grayscale_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/grayscale"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</HorizontalScrollView>